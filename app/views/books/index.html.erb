<h1>Books index</h1>

<br/>

<table border="2">
  <thead>
    <th>Title</th>
    <th>Author</th>
    <th>Actions</th>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author%></td>
      <td>
          <%= link_to "Show", book_path(book) %>
          <%= link_to "Edit", edit_book_path(book) %>
          <%= link_to "Delete", book_path(book), method: :delete %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br/>

<%= link_to "Create Book", new_book_path %>